{
  "manifest_version": 3,
  "name": "AirOps Multi-Screen Manager",
  "version": "1.0",
  "description": "Enable true multi-screen window management for aviation dashboard",
  
  "permissions": [
    "system.display",
    "windows",
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["http://localhost:3000/*", "https://your-domain.com/*"],
    "js": ["content-script.js"]
  }],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [{
    "resources": ["injected-script.js"],
    "matches": ["<all_urls>"]
  }]
}
